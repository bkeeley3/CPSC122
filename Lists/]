#include <iostream>
using namespace std;

#include "ex25.h"

List::List()
{
 cout << "inside the constructor" << endl;
 length = 0;
 head = NULL;
}

List::~List()
{
 cout << "inside the destructor" << endl;
 while (length > 0)
 {
  cout << length << endl;
  DeleteItemH();
 }
}

bool List::IsEmpty() const
{
 if (length == 0)
  return true;
 return false; 
}

int List::GetLength() const
{
 return length;
}

void List::PutItemH(const itemType newItem)
{
 node* tmp = new node;
 tmp->item = newItem;
 tmp->next = head;
 head = tmp;
 length++;
 tmp = NULL;
}

itemType List::GetItemH() const
{
 return head->item; 
}

void List::DeleteItemH()
{
 node* tmp = head->next;
 delete head;
 head = tmp;
 length--;
 tmp = NULL; 
}
	
void List::Print() const
{
 node* tmp = head;
 while(tmp != NULL)
 {
  cout << tmp->item << endl;
  tmp = tmp->next;
 }
}
